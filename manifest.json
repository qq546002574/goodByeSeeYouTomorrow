{
    "manifest_version": 2,
    "name": "下班打卡",
    "version": "1.0",
    "description": "下班打卡插件",
    "icons": {
        "128": "img/logo.png",
        "48": "img/logo.png",
        "16": "img/logo.png"
    },
    "background": {
        "page": "background.html"
    },
    "browser_action": {
        "default_icon": "img/logo.png",
        "default_title": "下班了记得打卡！",
        "default_popup": "popup.html"
    },
    "permissions": [
        "contextMenus",
        "tabs",
        "notifications",
        "webRequest",
        "webRequestBlocking",
        "storage",
        "http://*/*",
        "https://*/*"
    ]
}